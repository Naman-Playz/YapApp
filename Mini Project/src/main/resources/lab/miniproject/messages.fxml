<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lab.miniproject.MessagesController">
   <top>
      <HBox alignment="CENTER_LEFT" styleClass="header-bar" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="app-title" text="YapApp">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="userEmailLabel" styleClass="user-email" text="user@example.com">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" styleClass="logout-button" text="Logout">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <left>
            <VBox prefWidth="200.0" styleClass="users-panel" BorderPane.alignment="CENTER">
               <children>
                  <Label styleClass="panel-header" text="Online Users">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <ListView fx:id="usersListView" prefHeight="200.0" prefWidth="200.0" styleClass="users-list" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </left>
         <center>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="chat-scroll-pane" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="chatMessagesContainer" spacing="10.0" styleClass="chat-container">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
                  <HBox alignment="CENTER" spacing="10.0" styleClass="message-input-area">
                     <children>
                        <TextField fx:id="messageField" onAction="#sendMessage" promptText="Type your message here..." styleClass="message-input" HBox.hgrow="ALWAYS" />
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMessage" styleClass="send-button" text="Send" />
                        <Button fx:id="attachButton" mnemonicParsing="false" onAction="#attachFile" styleClass="attach-button" text="Attach" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </center>
</BorderPane>
